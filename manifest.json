{
    "manifest_version": 3,
    "name": "Monkey Bridge",
    "version": "1.0.0",
    "description": "Pay with crypto on any website. Connects your wallet to checkout pages for seamless PYUSD payments.",
    "icons": {
        "16": "ooga-logo.png",
        "48": "ooga-logo.png",
        "128": "ooga-logo.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open Monkey Bridge",
        "default_icon": {
            "16": "ooga-logo.png",
            "48": "ooga-logo.png",
            "128": "ooga-logo.png"
        }
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["injected.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
